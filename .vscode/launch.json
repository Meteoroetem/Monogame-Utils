            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildTilemapEditor",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/TilemapEditor/bin/Debug/net8.0/TilemapEditor",
